<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meenakshi.lending">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".Lending"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AdminHomeActivity" />
        <activity
            android:name=".EmployeeHomeActivity"
            android:label="@string/title_activity_employee_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CustomerHomeActivity"
            android:label="@string/title_activity_customer_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoanDetailsActivity"
            android:label="@string/title_activity_loan_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChangeProfileActivity"
            android:label="@string/title_activity_change_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContactForLoanActivity"
            android:label="@string/title_activity_contact_for_loan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CustomerAboutActivity"
            android:label="@string/title_activity_customer_about"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ApplyLoanActivity"
            android:label="@string/title_activity_apply_loan"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
