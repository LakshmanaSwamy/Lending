<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:background="@color/colorSignupBg"
    android:layout_height="fill_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.lakshmanasattineedi.login.NZLogin"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textSize="22dp"

            android:layout_weight="0.50" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/firstName"
                android:background="@color/colorWhite"
                android:layout_marginTop="20dp"
                android:hint="First Name" android:paddingLeft="20dp"
                android:linksClickable="false"
                android:longClickable="false" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/lastName"
            android:background="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:hint="Last Name" android:paddingLeft="20dp"
            android:linksClickable="false"
            android:longClickable="false" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/mobileNumber"
            android:background="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:hint="Mobile Number" android:paddingLeft="20dp"
            android:linksClickable="false"
            android:longClickable="false" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/email"
            android:background="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:hint="Email" android:paddingLeft="20dp"
            android:linksClickable="false"
            android:longClickable="false" />
        <Spinner
            android:id="@+id/static_spinner"
            android:background="@drawable/dropdown_new"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/address"
            android:background="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:hint="Address"
            android:paddingLeft="20dp"
            android:linksClickable="false"
            android:longClickable="false" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/regUserName"
            android:background="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:hint="User Name"
            android:paddingLeft="20dp"
            android:linksClickable="false"
            android:longClickable="false" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/regPwd"
            android:password="true"
            android:background="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:linksClickable="false"
            android:longClickable="false" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/regConfirmPwd"
            android:password="true"
            android:background="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:hint="Confirm Password"
            android:paddingLeft="20dp"
            android:linksClickable="false"
            android:longClickable="false" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/signUpSubmitBnt"
            android:text="Register"
            android:bottomRightRadius="10dp"
            android:bottomLeftRadius="10dp"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            android:background="@color/colorDarkPink"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:linksClickable="false"
            android:longClickable="false" />
    </LinearLayout>
</ScrollView>