<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorLoginBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lakshmanasattineedi.login.NZLogin">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/userName"
        android:background="@color/colorWhite"
        android:layout_gravity="right"
        android:text="meenakshiveera20@gmail.com"
        android:layout_marginTop="100dp"
        android:hint="UserName"
        android:textAlignment="center"
        android:linksClickable="false"
        android:longClickable="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:background="@color/colorWhite"
        android:layout_marginTop="5dp"
        android:text="chinni143"
        android:textAlignment="center"
        android:hint="Password"
        android:id="@+id/password" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/loginBtn"
        android:layout_marginTop="20dp"
        android:layout_height="45dp"
        android:background="@color/colorLoginGray"
        android:textColor="@color/colorLoginBackground"
        android:textStyle="bold"
        android:text="Login" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorLoginBackground"
        android:text="Not a Member? SignUp Now"
        android:id="@+id/signUp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:layout_marginTop="60dp" />


</LinearLayout>