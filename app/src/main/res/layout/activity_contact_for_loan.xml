<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/colorSignupBg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lakshmanasattineedi.login.NZLogin">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Leave a Message"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:paddingTop="50dp"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:paddingBottom="40dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/contactTitle"
            android:background="@color/colorWhite"
            android:layout_gravity="right"
            android:text="@string/leave_comment"
            android:linksClickable="false"
            android:longClickable="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/name"
            android:textColor="@color/colorBlack"
            android:layout_gravity="right"
            android:text="Your Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="text"
            android:background="@drawable/border"
            android:text=""
            android:id="@+id/nameValue" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/contactNumber"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:text="Contact Number" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="text"
            android:background="@drawable/border"
            android:text=""
            android:id="@+id/contactValue" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:id="@+id/subject"
            android:textColor="@color/colorBlack"
            android:layout_gravity="right"
            android:text="Subject" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="text"
            android:background="@drawable/border"
            android:text=""
            android:id="@+id/subjectValue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:id="@+id/message"
            android:textColor="@color/colorBlack"
            android:layout_gravity="right"
            android:text="Message" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="textMultiLine"
            android:background="@drawable/border"
            android:text=""
            android:id="@+id/messageValue" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorLightGray"
            android:text="Leave a Message"
            android:id="@+id/messageBtn"
            android:layout_gravity="left"
            android:textColor="@color/colorBlack" />
</LinearLayout>


</LinearLayout>